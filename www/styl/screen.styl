@import colors
@import prefixes
@import extraIg
body
    margin 0px
.ig
    @import basics
.tooltip
    margin-top -20px
.ig.compare
.ig.change
    float left
    width 650px
    height 650px
    overflow hidden
    position relative
    a
        text-decoration none
        color #333
    .legend
        position absolute
        bottom 25px
        left 0px
        list-style-type none
        margin 0px
        padding 0px
        border 1px solid #aaa
        border-top-right-radius 6px
        border-bottom-right-radius 6px
        overflow hidden
        z-index 99
        li
             padding 0px
             margin 0px
             float left
             font-size 0.8em
             font-weight bold
             padding 2px 4px
             color #333
 .ig.change
     .legend li
         &:first-child
         &:last-child
            color #eee


.ig.compare
    .legend li
        &:nth-child(6)
        &:nth-child(7)
        &:last-child
           color #eee
    .map-container
        position absolute
        top 0px
        bottom 0px
        overflow hidden
        .map-positioner
            top 0px
            bottom 0px

            position absolute
        &.master
            left 0px
            width 100%
            .map-positioner
                width 100%
                left 0px
        &.slave
            right 0px
            width 50%
            .map-positioner
                width 650px
                right 0px
                background transparent
    .slider
        position absolute
        top 8px
        left 50%
        width 115px
        margin-left (@width / -2)
        height 22px
        opacity 0.6
        font-size 0.9em
        font-weight bold
        cursor e-resize
        .arrow
            div
                background iurl("arrow.svg") no-repeat
                width 24px
                height 22px
                position absolute
                top 0px
            position absolute
            top 0px
            &.left
                background-position left
                padding-left 20px
                div, &
                    left 0px
            &.right
                background-position right
                padding-right 20px
                div, &
                    right 0px
                div
                    transform rotate(180deg)
